{
  "name": "@intangles/telemetry",
  "version": "1.0.0",
  "description": "A portable OpenTelemetry instrumentation library for Node.js/TypeScript applications",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:integration": "jest --testPathPattern=integration",
    "test:unit": "jest --testPathPattern=telemetry.test.ts",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "prepublishOnly": "npm run build && npm run test"
  },
  "keywords": [
    "opentelemetry",
    "telemetry",
    "tracing",
    "metrics",
    "logging",
    "instrumentation",
    "observability"
  ],
  "author": "Intangles Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/intangles/telemetry.git"
  },
  "bugs": {
    "url": "https://github.com/intangles/telemetry/issues"
  },
  "homepage": "https://github.com/intangles/telemetry#readme",
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.69.0",
    "@opentelemetry/exporter-logs-otlp-grpc": "^0.211.0",
    "@opentelemetry/exporter-metrics-otlp-grpc": "^0.211.0",
    "@opentelemetry/exporter-trace-otlp-grpc": "^0.211.0",
    "@opentelemetry/sdk-node": "^0.211.0"
  },
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.0.0",
    "typescript": "^5.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ]
}
